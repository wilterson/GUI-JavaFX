<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="488.0" prefWidth="400.0" style="-fx-background-color: #607D8B;" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hotDogExpress.views.LoginController">
    <children>
        <ImageView fitHeight="103.0" fitWidth="200.0" layoutX="113.0" layoutY="33.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../resources/logo.png" />
            </image>
        </ImageView>

        <JFXTextField fx:id="loginTextField" focusColor="WHITE" labelFloat="true" layoutX="34.0" layoutY="174.0" prefHeight="29.0" prefWidth="332.0" promptText="Login" style="-fx-text-inner-color: white;" unFocusColor="#d9d9d9" />

        <JFXPasswordField fx:id="passwordTextField" focusColor="WHITE" labelFloat="true" layoutX="34.0" layoutY="236.0" prefHeight="29.0" prefWidth="332.0" promptText="Senha" style="-fx-text-inner-color: white;" unFocusColor="#d9d9d9" />

        <JFXButton fx:id="buttonLogin" buttonType="RAISED" layoutX="34.0" layoutY="356.0" onAction="#login" prefHeight="31.0" prefWidth="332.0" style="-fx-background-color: #009688;" text="Login" textFill="WHITE">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </JFXButton>

        <JFXButton fx:id="buttonRegistrar" buttonType="RAISED" disable="true" layoutX="34.0" layoutY="416.0" onAction="#showSignup" prefHeight="31.0" prefWidth="332.0" style="-fx-background-color: #009688;" text="Registrar" textFill="WHITE">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </JFXButton>
    </children>
</AnchorPane>
